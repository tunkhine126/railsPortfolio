<div class="content-wrapper px-2 sm:px-4">
  <p class="text-lg font-medium pb-2 text-color-normal">Stuff created</p>
  <div class="content">
    <ul class="projects">
      <% @projects.each do |project| %>
        <li class="p-2">
          <%= link_to project.title, project_path(project.slug), class: "text-color-primary" %>
          <span class="bg-colorPrimaryLight text-color-twilight px-2"><%= project.status.humanize %></span>
        </li>
      <% end %>
    </ul>
  </div>
</div>